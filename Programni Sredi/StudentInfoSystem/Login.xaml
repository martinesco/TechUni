<Window x:Class="StudentInfoSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Login" Height="262.8" Width="413.6">
    <Grid>
        <GroupBox x:Name="gpLogin" Header="Login" HorizontalAlignment="Left" Height="213" Margin="10,10,0,0" VerticalAlignment="Top" Width="387">
            <Label x:Name="lvlUsername" Content="Username" HorizontalAlignment="Left" Margin="31,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.415,-0.31" Height="37" Width="81"/>
        </GroupBox>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="51,115,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="115,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" RenderTransformOrigin="0.502,0.484"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="115,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="277,174,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>


    </Grid>
</Window>
